<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LeaderboardActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Title -->
    <TextView
        android:id="@+id/leaderboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEADERBOARD"
        android:textColor="@android:color/white"
        android:textSize="44sp"
        android:fontFamily="@font/inter_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Game Toggle Row -->
    <LinearLayout
        android:id="@+id/leaderboard_game_toggle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Blackjack -->
        <TextView
            android:id="@+id/leaderboard_blackjack_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.42"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/inter_black"
            android:text="BLACKJACK"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:paddingHorizontal="28dp"
            android:paddingVertical="14dp"/>

        <!-- Euchre -->
        <TextView
            android:id="@+id/leaderboard_euchre_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.28"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/inter_black"
            android:text="EUCHRE"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:paddingHorizontal="28dp"
            android:paddingVertical="14dp"/>

        <!-- Go Fish -->
        <TextView
            android:id="@+id/leaderboard_gofish_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:fontFamily="@font/inter_black"
            android:text="GO FISH"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:paddingHorizontal="28dp"
            android:paddingVertical="14dp"/>
    </LinearLayout>

    <!-- Scrollable Leaderboard -->
    <ScrollView
        android:id="@+id/leaderboard_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_game_toggle"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/leaderboard_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp" />
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_nav_include"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
