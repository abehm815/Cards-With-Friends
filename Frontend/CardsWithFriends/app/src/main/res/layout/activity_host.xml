<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/host_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"
        android:fontFamily="@font/inter_black"
        android:textColor="@android:color/white"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:cornerRadius="12dp"
        app:strokeColor="@android:color/white"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/host_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Lobby Code"
        android:textSize="36sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/host_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Code Display -->
    <TextView
        android:id="@+id/host_code_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="48sp"
        android:fontFamily="@font/inter_black"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/host_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Keypad Grid -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/host_keypad_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:columnCount="3"
        app:rowCount="4"
        app:layout_constraintTop_toBottomOf="@id/host_code_display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Buttons 1-9 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/host_1_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="1"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/white"
            android:textSize="22sp"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/host_2_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="2"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/white"
            android:textSize="22sp"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/host_3_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="3"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/white"
            android:textSize="22sp"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/host_4_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="4"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/white"
            android:textSize="22sp"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/host_5_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="5"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/white"
            android:textSize="22sp"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/host_6_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="6"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/white"
            android:textSize="22sp"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/host_7_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="7"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/white"
            android:textSize="22sp"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/host_8_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="8"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/white"
            android:textSize="22sp"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/host_9_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="9"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/white"
            android:textSize="22sp"
            app:cornerRadius="16dp" />

        <!-- Empty Space -->
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp" />

        <!-- 0 Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/host_0_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="0"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/white"
            android:textSize="22sp"
            app:cornerRadius="16dp" />

        <!-- Backspace Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/host_backspace_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="âŒ«"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:fontFamily="@font/inter_bold"
            app:cornerRadius="16dp"
            app:strokeColor="@android:color/white"
            app:strokeWidth="2dp" />
    </androidx.gridlayout.widget.GridLayout>

    <!-- Host Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/host_create_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="HOST"
        android:textColor="@android:color/white"
        android:fontFamily="@font/inter_black"
        android:textSize="20sp"
        android:backgroundTint="@color/my_red"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
