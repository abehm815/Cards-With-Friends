<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_green"
    tools:context=".EuchreActivity">

    <!-- Player List Container at Top -->
    <ScrollView
        android:id="@+id/playerListContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:id="@+id/playerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />
    </ScrollView>

    <!-- Euchre Action Buttons at Bottom -->
    <Button
        android:id="@+id/euchre_pass_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass"
        android:textSize="16sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/euchre_orderup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Up"
        android:textSize="16sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/euchre_pickup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Up"
        android:textSize="16sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp" />

    <!-- Game Over Screen (Hidden by default) -->
    <LinearLayout
        android:id="@+id/gameOverScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#CC000000"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FF1A1A1A"
            android:padding="40dp">

            <TextView
                android:id="@+id/gameOverTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAME OVER!"
                android:textSize="36sp"
                android:textColor="#FFFFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/winningTeamText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team 1 Wins!"
                android:textSize="28sp"
                android:textColor="#FFFFD700"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/winningMembersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player1 and Player2"
                android:textSize="20sp"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/finalScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final Score: 10 points"
                android:textSize="22sp"
                android:textColor="#FF00FF00"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/returnToLobbyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return to Lobby"
                android:textSize="18sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>