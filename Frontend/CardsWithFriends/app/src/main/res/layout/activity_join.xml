<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Back Button (unchanged) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/join_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"
        android:fontFamily="@font/inter_black"
        android:textColor="@android:color/white"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:cornerRadius="12dp"
        app:strokeColor="@android:color/white"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/join_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Game Code"
        android:textSize="32sp"
        android:fontFamily="@font/inter_black"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/join_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Code Display -->
    <TextView
        android:id="@+id/join_code_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="48sp"
        android:fontFamily="@font/inter_black"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/join_code_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Keypad -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/keypad_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:columnCount="3"
        app:rowCount="4"
        app:layout_constraintTop_toBottomOf="@id/join_code_display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Digits 1–9 -->
        <TextView
            android:id="@+id/join_1_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="1"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_bold"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/join_2_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="2"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_bold"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/join_3_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="3"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_bold"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/join_4_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="4"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_bold"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/join_5_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="5"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_bold"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/join_6_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="6"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_bold"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/join_7_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="7"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_bold"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/join_8_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="8"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_bold"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/join_9_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="9"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_bold"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true" />

        <!-- Blank spacer -->
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp" />

        <!-- 0 -->
        <TextView
            android:id="@+id/join_0_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_bold"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true" />

        <!-- Backspace -->
        <TextView
            android:id="@+id/join_backspace_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="⌫"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:background="@drawable/btn_dark_outline"
            android:clickable="true"
            android:focusable="true" />
    </androidx.gridlayout.widget.GridLayout>

    <!-- JOIN Button -->
    <TextView
        android:id="@+id/join_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOIN"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:fontFamily="@font/inter_black"
        android:background="@drawable/btn_red"
        android:paddingHorizontal="32dp"
        android:paddingVertical="14dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/keypad_grid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
