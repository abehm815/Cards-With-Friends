<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Leave Button (Top Left, outlined style) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/lobbyview_leave_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave"
        android:textSize="16sp"
        android:fontFamily="@font/inter_black"
        android:textColor="@android:color/white"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:cornerRadius="12dp"
        app:strokeColor="@android:color/white"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Game Type Value -->
    <TextView
        android:id="@+id/lobbyview_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example Game"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:fontFamily="@font/inter_black"
        app:layout_constraintTop_toBottomOf="@id/lobbyview_leave_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Join Code Value -->
    <TextView
        android:id="@+id/lobbyview_code_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:fontFamily="@font/inter_black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/lobbyview_type_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Action Buttons Row -->
    <LinearLayout
        android:id="@+id/lobbyview_action_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/lobbyview_code_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Start Game -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/lobbyview_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Game"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/my_green"
            app:cornerRadius="12dp"
            android:layout_marginEnd="16dp" />

        <!-- End Lobby -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/lobbyview_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Lobby"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/my_red"
            app:cornerRadius="12dp" />
    </LinearLayout>

    <!-- Scrollable list of users -->
    <ScrollView
        android:id="@+id/lobbyview_user_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/lobbyview_action_row"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/lobbyview_user_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal" />
    </ScrollView>

    <!-- Chat Button -->
    <ImageView
        android:id="@+id/chat_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/chaticon"
        android:contentDescription="Chat Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
