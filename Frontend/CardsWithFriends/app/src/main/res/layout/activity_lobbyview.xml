<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Leave Button (Top Left, outlined style) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/lobbyview_leave_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave"
        android:textSize="16sp"
        android:fontFamily="@font/inter_black"
        android:textColor="@android:color/white"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:cornerRadius="12dp"
        app:strokeColor="@android:color/white"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Game Type Value -->
    <TextView
        android:id="@+id/lobbyview_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example Game"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:fontFamily="@font/inter_black"
        app:layout_constraintTop_toBottomOf="@id/lobbyview_leave_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Join Code Value -->
    <TextView
        android:id="@+id/lobbyview_code_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:fontFamily="@font/inter_black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/lobbyview_type_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Delete Lobby Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/lobbyview_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Lobby"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/inter_bold"
        android:backgroundTint="@color/my_red"
        app:cornerRadius="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/lobbyview_code_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable list of users -->
    <ScrollView
        android:id="@+id/lobbyview_user_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/lobbyview_delete_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/lobbyview_user_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
