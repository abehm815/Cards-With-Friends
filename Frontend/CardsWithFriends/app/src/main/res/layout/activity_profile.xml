<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:textColor="@android:color/white"
        android:textSize="44sp"
        android:fontFamily="@font/inter_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Profile Icon -->
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon_profile"
        android:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/profile_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Username -->
    <TextView
        android:id="@+id/profile_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Username)"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toBottomOf="@id/profile_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Button Stack -->
    <LinearLayout
        android:id="@+id/profile_button_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/profile_username_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Update Button -->
        <TextView
            android:id="@+id/profile_update_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/inter_black"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:paddingVertical="14dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Delete Button -->
        <TextView
            android:id="@+id/profile_delete_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/inter_black"
            android:gravity="center"
            android:background="@drawable/btn_red"
            android:paddingVertical="14dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Logout Button -->
        <TextView
            android:id="@+id/profile_logout_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/inter_black"
            android:gravity="center"
            android:background="@drawable/btn_dark_outline"
            android:paddingVertical="14dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_nav_include"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
