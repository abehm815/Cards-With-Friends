<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lobby_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Back Button with Arrow Icon -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/lobby_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        android:textSize="18sp"
        android:fontFamily="@font/inter_black"
        android:textColor="@android:color/white"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@android:color/white"
        app:strokeWidth="2dp"
        app:cornerRadius="12dp"
        app:icon="@drawable/icon_backarrow"
        app:iconTint="@android:color/white"
        app:iconPadding="8dp"
        app:iconGravity="textStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/lobby_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/inter_black"
        android:text="Lobbies"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Host Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/lobby_host_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Host"
        android:textSize="20sp"
        android:fontFamily="@font/inter_black"
        android:textColor="@android:color/black"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="12dp"
        app:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/lobby_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Join Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/lobby_join_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Join"
        android:textSize="20sp"
        android:fontFamily="@font/inter_black"
        android:textColor="@android:color/black"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="12dp"
        app:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/lobby_host_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lobby_find_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Find"
        android:textSize="20sp"
        android:fontFamily="@font/inter_black"
        android:textColor="@android:color/black"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="12dp"
        app:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/lobby_join_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
