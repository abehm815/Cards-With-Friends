<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lobby_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Back Button (unchanged) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/lobby_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"
        android:fontFamily="@font/inter_black"
        android:textColor="@android:color/white"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@android:color/white"
        app:strokeWidth="2dp"
        app:cornerRadius="12dp"
        app:icon="@drawable/icon_backarrow"
        app:iconTint="@android:color/white"
        app:iconPadding="8dp"
        app:iconGravity="textStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/lobby_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_black"
        android:text="ENTER GAME LOBBY"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:textSize="36sp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/lobby_host_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Vertical chain of buttons -->
    <TextView
        android:id="@+id/lobby_host_btn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="HOST"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:fontFamily="@font/inter_black"
        android:gravity="center"
        android:background="@drawable/btn_dark"
        android:paddingVertical="14dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lobby_join_btn"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/lobby_join_btn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="JOIN"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:fontFamily="@font/inter_black"
        android:gravity="center"
        android:background="@drawable/btn_dark"
        android:paddingVertical="14dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/lobby_host_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lobby_find_btn" />

    <TextView
        android:id="@+id/lobby_find_btn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="FIND"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:fontFamily="@font/inter_black"
        android:gravity="center"
        android:background="@drawable/btn_dark"
        android:paddingVertical="14dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/lobby_join_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
