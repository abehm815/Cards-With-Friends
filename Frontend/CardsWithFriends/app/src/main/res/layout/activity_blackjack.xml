<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_green"
    tools:context=".BlackjackActivity">

    <!-- Blackjack Table (fixed independent position) -->
    <ImageView
        android:id="@+id/tableImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bj_table_ribbon"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dealer Cards (fixed distance from top, always visible) -->
    <LinearLayout
        android:id="@+id/dealerCardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Player Cards (fixed distance above turn UI) -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toTopOf="@id/playerScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Action Buttons (just above player cards) -->
    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/cardContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHit"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            android:backgroundTint="@color/my_green"
            app:icon="@drawable/hit"
            app:iconTint="@android:color/white"
            app:iconSize="32dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStand"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            android:backgroundTint="@color/my_red"
            app:icon="@drawable/stand"
            app:iconTint="@android:color/white"
            app:iconSize="32dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSplit"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            android:backgroundTint="@color/my_blue"
            app:icon="@drawable/split"
            app:iconTint="@android:color/white"
            app:iconSize="32dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDouble"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            android:backgroundTint="@color/my_orange"
            app:icon="@drawable/double_icon"
            app:iconTint="@android:color/white"
            app:iconSize="32dp"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <!-- Betting Panel -->
    <LinearLayout
        android:id="@+id/bettingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/playerScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/balanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance: $0"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bet_input_layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@android:color/white"
            app:hintTextColor="@android:color/white"
            app:boxBackgroundColor="@color/my_grey"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxStrokeWidth="2dp"
            android:layout_marginTop="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/betInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:hint="Enter bet amount"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:gravity="center" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/betButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Bet"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/my_green"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp" />
    </LinearLayout>

    <!-- Player Turn Bar -->
    <HorizontalScrollView
        android:id="@+id/playerScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/playerList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:layout_gravity="center_horizontal" />
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
