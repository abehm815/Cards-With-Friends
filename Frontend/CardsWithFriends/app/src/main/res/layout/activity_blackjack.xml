<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_green"
    tools:context=".blackjack.BlackjackActivity">

    <!-- Blackjack Table (fixed independent position) -->
    <ImageView
        android:id="@+id/tableImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bj_table_ribbon"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dealer Cards (fixed distance from top, always visible) -->
    <LinearLayout
        android:id="@+id/dealerCardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Player Cards (fixed distance above turn UI) -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toTopOf="@id/playerScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/cardContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- HIT -->
        <ImageButton
            android:id="@+id/btnHit"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            android:background="@drawable/btn_hit_gradient"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:src="@drawable/hit"
            app:tint="@color/my_green"
            android:contentDescription="Hit"
            android:foreground="?attr/selectableItemBackgroundBorderless" />

        <!-- STAND -->
        <ImageButton
            android:id="@+id/btnStand"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            android:background="@drawable/btn_stand_gradient"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:src="@drawable/stand"
            app:tint="@color/my_red"
            android:contentDescription="Stand"
            android:foreground="?attr/selectableItemBackgroundBorderless" />

        <!-- SPLIT -->
        <ImageButton
            android:id="@+id/btnSplit"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            android:background="@drawable/btn_split_gradient"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:src="@drawable/split"
            app:tint="@color/my_blue"
            android:contentDescription="Split"
            android:foreground="?attr/selectableItemBackgroundBorderless" />

        <!-- DOUBLE -->
        <ImageButton
            android:id="@+id/btnDouble"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            android:background="@drawable/btn_double_gradient"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:src="@drawable/double_icon"
            app:tint="@color/my_orange"
            android:contentDescription="Double"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>


    <!-- Betting Panel -->
    <LinearLayout
        android:id="@+id/bettingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/playerScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Balance display -->
        <TextView
            android:id="@+id/balanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance: $0"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:fontFamily="@font/inter_bold"
            android:shadowColor="@color/my_green"
            android:shadowRadius="8"
            android:layout_marginBottom="10dp" />

        <!-- Bet input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bet_input_layout"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/my_green"
            app:hintTextColor="@android:color/white"
            app:boxBackgroundColor="@color/my_grey"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/betInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:hint="Enter bet amount"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:gravity="center" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Gradient Bet Button -->
        <ImageButton
            android:id="@+id/betButton"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:background="@drawable/btn_place_bet_gradient"
            android:scaleType="centerInside"
            android:contentDescription="Place Bet"
            android:src="@drawable/chip"
            app:tint="@android:color/white"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>


    <!-- Player Turn Bar -->
    <HorizontalScrollView
        android:id="@+id/playerScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/playerList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:layout_gravity="center_horizontal" />
    </HorizontalScrollView>

    <!-- Start New Round Button (initially hidden) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_new_round_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start New Round"
        android:textSize="18sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/my_blue"
        android:visibility="gone"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
