<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".StatsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Title -->
    <TextView
        android:id="@+id/stats_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATS"
        android:textColor="@android:color/white"
        android:textSize="44sp"
        android:fontFamily="@font/inter_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Centered Refresh Button -->
    <ImageButton
        android:id="@+id/refresh_button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        android:contentDescription="Refresh Stats"
        android:src="@drawable/icon_refresh"
        app:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/stats_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Game Buttons -->
    <LinearLayout
        android:id="@+id/stats_button_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/refresh_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Blackjack -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_blackjack_btn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="18dp"
            android:fontFamily="@font/inter_black"
            android:text="Blackjack"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/my_red"
            android:gravity="center"
            android:singleLine="true"
            app:cornerRadius="12dp" />

        <!-- Euchre -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_euchre_btn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="18dp"
            android:fontFamily="@font/inter_black"
            android:text="Euchre"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/my_blue"
            android:gravity="center"
            android:singleLine="true"
            app:cornerRadius="12dp" />

        <!-- Go Fish -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_gofish_btn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:paddingHorizontal="18dp"
            android:fontFamily="@font/inter_black"
            android:text="Go Fish"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/my_green"
            android:gravity="center"
            android:singleLine="true"
            app:cornerRadius="12dp" />
    </LinearLayout>

    <!-- Scrollable Stats Section -->
    <ScrollView
        android:id="@+id/stats_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/stats_button_row"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/stats_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp" />
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_nav_include"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
