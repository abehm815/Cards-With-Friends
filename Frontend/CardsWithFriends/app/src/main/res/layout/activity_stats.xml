<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".StatsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Title -->
    <TextView
        android:id="@+id/stats_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATS"
        android:textColor="@android:color/white"
        android:textSize="44sp"
        android:fontFamily="@font/inter_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Refresh Button (top-right corner, smaller) -->
    <ImageButton
        android:id="@+id/refresh_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:contentDescription="Refresh Stats"
        android:src="@drawable/icon_refresh"
        app:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="24dp" />

    <!-- Game Toggle Row -->
    <LinearLayout
        android:id="@+id/stats_button_row"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/stats_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Blackjack -->
        <TextView
            android:id="@+id/stats_blackjack_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.42"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/inter_black"
            android:text="BLACKJACK"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:paddingHorizontal="28dp"
            android:paddingVertical="14dp"/>

        <!-- Euchre -->
        <TextView
            android:id="@+id/stats_euchre_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.28"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/inter_black"
            android:text="EUCHRE"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:paddingHorizontal="28dp"
            android:paddingVertical="14dp"/>

        <!-- Go Fish -->
        <TextView
            android:id="@+id/stats_gofish_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:fontFamily="@font/inter_black"
            android:text="GO FISH"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:paddingHorizontal="28dp"
            android:paddingVertical="14dp"/>
    </LinearLayout>

    <!-- Scrollable Stats Section -->
    <ScrollView
        android:id="@+id/stats_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/stats_button_row"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/stats_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp" />
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_nav_include"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
