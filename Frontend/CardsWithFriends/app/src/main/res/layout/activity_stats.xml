<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".StatsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Title -->
    <TextView
        android:id="@+id/stats_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATS"
        android:textColor="@android:color/white"
        android:textSize="44sp"
        android:fontFamily="@font/inter_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Game Buttons (Vertical Stack) -->
    <LinearLayout
        android:id="@+id/stats_button_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/stats_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Euchre -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_euchre_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/inter_black"
            android:text="Euchre"
            android:textColor="@color/my_blue"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:strokeColor="@color/my_blue"
            app:strokeWidth="2dp" />

        <!-- Blackjack -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_black_jack_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/inter_black"
            android:text="Black Jack"
            android:textColor="@color/my_red"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:strokeColor="@color/my_red"
            app:strokeWidth="2dp" />

        <!-- Go Fish -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_go_fish_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_black"
            android:text="Go Fish"
            android:textColor="@color/my_green"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:strokeColor="@color/my_green"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <!-- Stats Display Section -->
    <ScrollView
        android:id="@+id/stats_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/stats_button_column"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/stats_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp">

            <TextView android:id="@+id/stat_1_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/white" android:textSize="20sp" android:fontFamily="@font/inter_bold" android:layout_marginTop="6dp" />
            <TextView android:id="@+id/stat_2_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/white" android:textSize="20sp" android:fontFamily="@font/inter_bold" android:layout_marginTop="6dp" />
            <TextView android:id="@+id/stat_3_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/white" android:textSize="20sp" android:fontFamily="@font/inter_bold" android:layout_marginTop="6dp" />
            <TextView android:id="@+id/stat_4_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/white" android:textSize="20sp" android:fontFamily="@font/inter_bold" android:layout_marginTop="6dp" />
            <TextView android:id="@+id/stat_5_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/white" android:textSize="20sp" android:fontFamily="@font/inter_bold" android:layout_marginTop="6dp" />
            <TextView android:id="@+id/stat_6_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/white" android:textSize="20sp" android:fontFamily="@font/inter_bold" android:layout_marginTop="6dp" />
            <TextView android:id="@+id/stat_7_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/white" android:textSize="20sp" android:fontFamily="@font/inter_bold" android:layout_marginTop="6dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_nav_include"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
