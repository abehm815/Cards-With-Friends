<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33FFFFFF"> <!-- semi-transparent white ripple -->

    <!-- Background shape under ripple -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#151515" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#555555" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

</ripple>
